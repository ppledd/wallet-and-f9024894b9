<resources>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#333333</item> <!--  敲定颜色-->
        <item name="android:textSize">17sp</item> <!--  搞掂字体大小-->
    </style>

    <!--间隔样式输入框-->
    <declare-styleable name="IntervalStyleEditText">
        <!--内容文本Mode(默认/手机号码) 手机号码强制11位-->
        <attr name="contentMode" format="enum">
            <enum name="mode_default" value="0" />
            <enum name="mode_mobile" value="1" />
        </attr>
        <!--样式Mode(下划线/方块)-->
        <attr name="styleMode" format="enum">
            <enum name="mode_underline" value="0" />
            <enum name="mode_block" value="1" />
        </attr>
        <attr name="inputCount" format="integer" />
        <attr name="inputTextColor" format="color|reference" />
        <attr name="inputTextSize" format="dimension|reference" />
        <attr name="inputHint" format="string|reference" />
        <attr name="inputHintColor" format="color|reference" />
        <attr name="inputHintSize" format="dimension|reference" />
        <attr name="passwordTextEnable" format="boolean|reference" />
        <attr name="passwordTextColor" format="color|reference" />
        <attr name="passwordTextSize" format="dimension|reference" />
        <!--下划线-->
        <attr name="underLineMarginStart" format="dimension|reference" />
        <attr name="underLineColor" format="color|reference" />
        <attr name="underLineHeight" format="dimension|reference" />
        <!--方块-->
        <attr name="blockColor" format="color|reference" />
        <attr name="blockCorner" format="dimension|reference" />
    </declare-styleable>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/black</item>
        <!--<item name="tabIndicatorHeight">10dp</item>-->
        <!--<item name="tabPaddingStart">12dp</item>-->
        <!--<item name="tabPaddingEnd">12dp</item>-->
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_8e</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="buttonPressStyle">
        <item name="android:background">@drawable/bg_button_press</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <style name="ToolbarWhiteTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">17sp</item> <!--  搞掂字体大小-->
    </style>
    <style name="buttonWord">
        <item name="android:background">@drawable/bg_button_word</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/color_7190FF</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:thumb">@mipmap/icon_seek_bar</item>
    </style>



</resources>