<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <solid android:color="@color/color_333649" />
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>