<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_re_white"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/my_wallet_detail_export"
                android:textColor="@color/gray_349"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@mipmap/icon_close" />

        </LinearLayout>


        <View
            android:layout_width="45dp"
            android:layout_height="4dp"
            android:layout_marginLeft="25dp"
            android:background="@color/color_7190FF" />


        <TextView
            android:id="@+id/tv_mnem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/gray_66"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_pri_qrcode"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <Button
            android:id="@+id/btn_copy"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_shape_button"
            android:gravity="center"
            android:text="@string/copy"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>